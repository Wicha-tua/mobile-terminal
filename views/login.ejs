<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>canvas</title>
    <link rel="stylesheet" href="./css/bootstrap.css">
    <link rel="stylesheet" href="./css/login.css">
</head>
<body>
<div class="form_login">
    <!--logo-->
    <div class="form_logo">
        <img  class="hidden-xs col-sm-5" src="./images/logo_user.png" alt="">
        <span class="col-xs-12 col-sm-4">用户登录</span>
        <span class="col-sm-3"></span>
    </div>

    <hr>
    <!--登录注册-->
    <div class="container-fluid body-content">
        <div class="row row-first">
            <!--图片-->
            <div class="hidden-xs col-sm-6 img-title">
                <img src="./images/4.jpg" alt=""><br>
            </div>
            <!--登录注册-->
            <div class="col-xs-12 col-sm-4">
                <ul class="nav nav-tabs mi-nav-tabs">
                    <li><a href="#tab1" data-toggle="tab">登录</a></li>
                    <li><a href="./register.html">注册</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="tab1">
                        <form id="form-login" action="/design/login" method="post">
                            <div class="form-group">
                                <label for="userNo" class="sr-only">账号</label>
                                <input type="text" name="userNo" id="userNo" class="form-control" placeholder="请输入账号">
                            </div>
                            <div class="form-group">
                                <label for="psw" class="sr-only">密码</label>
                                <input type="password" name="psw" id="psw" class="form-control" placeholder="请输入密码">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="ck" id="ck"> 记住密码
                                </label>
                                <a href="#" class="pull-right">忘记密码</a>
                            </div>
                            <button type="button" class="btn btn-default btn-block mi-btn-default">登录</button>
                        </form>
                        <span class="col-sm-2"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="./js/jquery.min.js"></script>
<script src="./js/bootstrap.js"></script>
</body>
</html>